# !/usr/bin/env bash
# start

# Install-specific
export CLUSTERDB=/Users/swat/dev/cdb
export FLASK_ENV=development
export HOST=localhost
export PORT=5555
export WWW_SOCKET=127.0.0.1:$PORT
export VIEWER_URL=http://localhost:3000/

# Install-independent
# TODO build a real production server
source $CLUSTERDB/env/bin/activate
export FLASK_APP=cluster
if [ $HTTPS ]; then
    nohup flask run -h $HOST -p $PORT --with-threads --cert $CERT --key $KEY &> log &
else
    flask run -h $HOST -p $PORT --with-threads $USE_HTTPS
fi
