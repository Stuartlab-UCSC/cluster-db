
#!/bin/bash

FILE=clusterDb.tgz
LOCALTAR=$CLUSTERDB/$FILE
FROMTAR=swat@plaza:ops/$FILE
echo "scp'g from $FROMTAR to $LOCALTAR..."
scp $FROMTAR $LOCALTAR

cd $CLUSTERDB
echo "moving old code to clusterDb.old"
mv clusterDb clusterDb.old
echo "untarring..."
tar -xf $LOCALTAR -C $CLUSTERDB

echo "kill old process and issue 'start'"
ps -eaf | grep flask
